@model ATM.Business.DTO.CashWithdrawalDTO

@{
    ViewBag.Title = "CashWithdrawal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-center">Cash Withdrawal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.WithdrawnAmount, htmlAttributes: new { @class = "control-label col-md-4 col-sm-6" })
            <div class="col-md-8 col-sm-6">
                @Html.TextBoxFor(model => model.WithdrawnAmount, htmlAttributes: new { @class = "enter-number form-control", @readonly = "readonly", @maxlength = "5" })
                @Html.ValidationMessageFor(model => model.WithdrawnAmount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-sm-offset-4 col-md-10">
                @Html.Partial("Numpad")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
                @Html.Partial("Exit")
                <input type="submit" value="OK" class="btn btn-success btn-lg pull-right" />
            </div>
        </div>
    </div>
}
