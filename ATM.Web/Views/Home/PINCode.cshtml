@model ATM.Business.DTO.PINCodeDTO

@{
    ViewBag.Title = "PINCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PINCodePost", "Home", FormMethod.Post)) 
 {
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 class="text-center">Enter PIN Code</h4>
    <hr />
    <p class="text-danger text-center">@ViewBag.Message</p>
    <div class="form-group">
        @Html.LabelFor(model => model.PINCode, htmlAttributes: new { @class = "control-label col-md-4 col-sm-6" })
        <div class="col-md-8 col-sm-6">
            @Html.TextBoxFor(model => model.PINCode, htmlAttributes: new { @class = "enter-number form-control", @type = "password", @maxlength = "4", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.PINCode, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-sm-offset-4 col-md-10">
            @Html.Partial("Numpad")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-7">
            @Html.ActionLink("Exit", "Exit", null, htmlAttributes: new { @class= "btn btn-danger btn-lg pull-left" })
            <input type="submit" value="OK" class="btn btn-success btn-lg pull-right" />
        </div>
    </div>
</div>
 }
