@model ATM.Business.ViewModels.CreditCardVM

@{
    ViewBag.Title = "Credit Card Number";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">Enter Credit Card Number</h4>
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        <div class="form-group">
            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-4 col-sm-6" })
            <div class="col-md-8 col-sm-6">
                <input name="Number" class="enter-number form-control" type="text" maxlength="16" oninput="maskCreditCard()" readonly />
                @*@Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-sm-offset-4 col-md-10">
                @Html.Partial("Numpad")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
                <input type="submit" value="OK" class="btn btn-success btn-lg pull-right" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
